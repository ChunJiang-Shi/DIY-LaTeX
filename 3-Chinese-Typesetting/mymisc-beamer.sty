\ProvidesPackage{mymisc-beamer}
% Miscellaneous in preamble specific to Chinese-beamer.tex

\RequirePackage{booktabs} % Providing \top/mid/bottom-rule
\RequirePackage{amsmath,amssymb}
\RequirePackage{hologo}   % Providing Xe/Lua-LaTeX logos
\RequirePackage[T1]{fontenc}
\RequirePackage{lmodern}
\RequirePackage{pgfornament}
\RequirePackage[backend=biber,]{biblatex}

% Bibliography file
\addbibresource{Sections/ref.bib}
% Bibliography font size
\renewcommand*{\bibfont}{\small}

% Math definitions
\newcommand{\e}{\ensuremath{\mathrm{e}}}
% Following https://tex.stackexchange.com/a/86498
\newcommand{\iu}{{\ensuremath{\mathrm{i}\mkern1mu}}}

% Define \codesize
\newcommand{\codesize}{\scriptsize}

% Horizontal rule
\newcommand{\myhrule}{\rule[2.5pt]{\textwidth}{.2pt}}

% Beamer settings
\usetheme{EastLansing}
\usefonttheme{serif}
\setbeamersize{
  description width = 3\ccwd,
}

% Set CJK main fonts
\setCJKmainfont{Noto Serif CJK SC}

% Set mono fonts
\setCJKmonofont{Source Han Mono SC}
% \setmonofont{Liberation Mono}

% Beamer inner theme
\useinnertheme{rectangles}

% Block style
\setbeamertemplate{blocks}[rounded][shadow=true]

% Set line space. Following https://tex.stackexchange.com/a/157173
\setlength{\parskip}{\baselineskip}

